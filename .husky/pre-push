# Pre-push checks
echo "Running pre-push checks..."

# Type checking
echo "Type checking..."
pnpm tsc --noEmit || exit 1

# Run tests (only if vitest is installed)
if pnpm list vitest >/dev/null 2>&1; then
  echo "Running tests..."
  pnpm test --run || exit 1
else
  echo "Skipping tests (vitest not installed yet)"
fi

echo "Pre-push checks passed!"
